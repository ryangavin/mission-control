{
  "name": "mission-control",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "bridge": "bun run --filter @mission-control/bridge start",
    "bridge:dev": "bun run --filter @mission-control/bridge dev",
    "web": "bun run --filter @mission-control/web dev",
    "install-script": "bun run --filter @mission-control/bridge start install",
    "desktop": "bun run --filter @mission-control/desktop dev",
    "desktop:build": "bun run --filter @mission-control/desktop build",
    "desktop:sidecar": "bun run --filter @mission-control/desktop build:sidecar"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  }
}
