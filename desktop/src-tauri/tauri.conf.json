{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mission Control Bridge",
  "identifier": "com.ryangavin.missioncontrol",
  "version": "0.0.1",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../resources/AbletonOSC": "AbletonOSC",
      "../../dist": "dist"
    },
    "externalBin": [
      "../dist-bridge/mission-control-bridge"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "windows": []
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
