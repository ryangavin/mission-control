{
  "name": "@mission-control/bridge",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "mission-control": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts start",
    "start": "bun src/index.ts start",
    "test-osc": "bun src/index.ts test",
    "build": "bun build src/index.ts --outdir dist --target node",
    "compile": "bun build --compile --outfile dist/mission-control-bridge src/index.ts",
    "compile:sidecar": "bun build --compile --outfile ../desktop/binaries/mission-control-bridge src/index.ts"
  },
  "dependencies": {
    "@mission-control/protocol": "workspace:*",
    "commander": "^12.0.0",
    "osc-js": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
